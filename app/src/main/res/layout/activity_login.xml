<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD700">



    <LinearLayout
        android:id="@+id/loginContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000"
        android:padding="24dp"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:elevation="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToOutline="true"
        android:backgroundTint="#000000"

        >

        <!-- Judul -->
        <TextView
            android:id="@+id/loginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="24sp"
            android:textColor="#FFD700"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"/>

        <!-- Username -->
        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:drawableStart="@drawable/user"
            android:background="@drawable/edittextbg"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="12dp"/>

        <!-- Password -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:drawableStart="@drawable/password"
            android:inputType="textPassword"
            android:background="@drawable/edittextbg"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:layout_marginBottom="100dp"/>



        <!-- Submit Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:textStyle="bold"
            android:textColor="#FFFF00"
            android:background="@drawable/buttonsubmit" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum punya akun? "
            android:textSize="14sp"
            android:textColor="#E9E9E9"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:padding="4dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textViewGoToRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar di sini"
            android:textSize="14sp"
            android:textColor="#23E2C5"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:padding="4dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <!-- Tambahkan ini di dalam LinearLayout, setelah AppCompatButton -->



    <!-- Kiri: Gambar Vertikal Lenspro -->
    <ImageView
        android:id="@+id/lensproLeftImage"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/bglogin"
        android:background="#000000"
        android:padding="8dp"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Lenspro Vertikal Kiri"/>

    <!-- Lenspro kanan bawah ke atas -->
    <ImageView
        android:id="@+id/lensproRightImage"
        android:layout_width="wrap_content"
        android:layout_height="182dp"
        android:src="@drawable/bglogin"
        android:rotation="180"
        android:background="#000000"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="10dp"
        android:contentDescription="Lenspro Vertikal Kanan"/>
</androidx.constraintlayout.widget.ConstraintLayout>
